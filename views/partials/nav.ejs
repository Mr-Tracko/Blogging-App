<!-- views/partials/navbar.ejs -->
<style>
    /* Premium Navbar base styles */
    .navbar {
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
      padding: 14px 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      position: relative;
      z-index: 1000;
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
    }
    
    .navbar::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to right, rgba(33, 37, 41, 0.97), rgba(33, 37, 41, 0.97), rgba(13, 202, 240, 0.05));
      z-index: -1;
    }
    
    .container-fluid {
      padding: 0 24px;
    }
    
    .navbar-brand {
      font-size: 2rem;
      font-weight: 800;
      color: #f8f9fa;
      letter-spacing: 0.8px;
      transition: all 0.3s;
      position: relative;
      padding-left: 1rem;
    }
    
    .navbar-brand::before {
      content: "";
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      height: 70%;
      width: 3px;
      background: #0dcaf0;
      border-radius: 2px;
    }
    
    .navbar-brand:hover {
      color: #0dcaf0;
      text-shadow: 0 0 15px rgba(13, 202, 240, 0.4);
      transform: translateY(-1px);
    }
    
    /* Navbar toggler premium styling */
    .navbar-toggler {
      border: 1px solid rgba(255, 255, 255, 0.1);
      padding: 0.5rem 0.8rem;
      border-radius: 6px;
      background: rgba(255, 255, 255, 0.03);
      transition: all 0.2s;
    }
    
    .navbar-toggler:hover {
      background: rgba(255, 255, 255, 0.08);
    }
    
    .navbar-toggler:focus {
      box-shadow: 0 0 0 0.2rem rgba(13, 202, 240, 0.3);
    }
    
    .navbar-toggler-icon {
      filter: drop-shadow(0 0 2px rgba(13, 202, 240, 0.3));
    }
    
    /* Nav items premium styling */
    .navbar-nav {
      margin-left: auto;
      gap: 10px;
    }
    
    .nav-item {
      position: relative;
    }
    
    .nav-link {
      color: rgba(255, 255, 255, 0.85);
      font-weight: 500;
      padding: 10px 18px;
      border-radius: 6px;
      transition: all 0.2s ease-in-out;
      letter-spacing: 0.3px;
      position: relative;
      overflow: hidden;
    }
    
    .nav-link::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 50%;
      width: 0;
      height: 2px;
      background-color: #0dcaf0;
      transition: all 0.3s;
      transform: translateX(-50%);
      opacity: 0;
    }
    
    .nav-link:hover {
      color: #fff;
      background-color: rgba(13, 202, 240, 0.08);
      transform: translateY(-2px);
    }
    
    .nav-link:hover::after {
      width: 80%;
      opacity: 1;
    }
    
    .nav-link.active {
      color: #fff;
      background-color: rgba(13, 202, 240, 0.12);
      font-weight: 600;
    }
    
    .nav-link.active::after {
      width: 80%;
      opacity: 1;
    }
    
    /* Logout button special styling */
    .nav-link.logout-btn {
      color: #fff;
      background-color: rgba(13, 202, 240, 0.15);
      border: 1px solid rgba(13, 202, 240, 0.3);
      padding: 10px 20px;
      font-weight: 500;
      transition: all 0.2s;
    }
    
    .nav-link.logout-btn:hover {
      background-color: rgba(13, 202, 240, 0.25);
      box-shadow: 0 0 15px rgba(13, 202, 240, 0.2);
    }
    
    /* Dropdown premium styling */
    .dropdown-toggle::after {
      margin-left: 8px;
      vertical-align: middle;
      transition: all 0.3s;
    }
    
    .dropdown-toggle:hover::after {
      transform: translateY(2px);
    }
    
    .dropdown-menu {
      background-color: rgba(33, 37, 41, 0.95);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.05);
      border-radius: 8px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3), 0 0 20px rgba(13, 202, 240, 0.1);
      padding: 0.7rem 0;
      margin-top: 0.8rem;
      transform-origin: top center;
      transform: translateY(10px);
      opacity: 0;
      transition: all 0.2s;
      overflow: hidden;
    }
    
    .dropdown-menu.show {
      transform: translateY(0);
      opacity: 1;
    }
    
    .dropdown-item {
      color: rgba(255, 255, 255, 0.85);
      padding: 0.7rem 1.8rem;
      transition: all 0.2s;
      position: relative;
    }
    
    .dropdown-item::before {
      content: "";
      position: absolute;
      left: 0.5rem;
      top: 50%;
      transform: translateY(-50%);
      width: 0;
      height: 0;
      background: #0dcaf0;
      border-radius: 50%;
      transition: all 0.2s;
    }
    
    .dropdown-item:hover {
      background-color: rgba(13, 202, 240, 0.1);
      color: #fff;
      padding-left: 2.2rem;
    }
    
    .dropdown-item:hover::before {
      width: 6px;
      height: 6px;
    }
    
    /* Alert premium styling */
    .alert-danger {
      background: linear-gradient(to right, rgba(220, 53, 69, 0.9), rgba(220, 53, 69, 0.7));
      color: #fff;
      border: none;
      border-radius: 8px;
      box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
      padding: 1rem 1.5rem;
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
    }
    
    /* Dark theme premium enhancements */
    [data-bs-theme="dark"] .navbar {
      background-color: transparent !important;
    }
    
    /* Responsive premium adjustments */
    @media (max-width: 991.98px) {
      .navbar-collapse {
        background-color: rgba(33, 37, 41, 0.97);
        margin: 1rem -24px -14px;
        padding: 1rem 2rem 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        box-shadow: 0 15px 20px rgba(0, 0, 0, 0.2);
      }
      
      .navbar-nav {
        padding-top: 0.5rem;
      }
      
      .nav-link, .dropdown-item {
        padding: 12px 16px;
      }
      
      .dropdown-menu {
        background-color: rgba(13, 202, 240, 0.03);
        border-left: 2px solid #0dcaf0;
        box-shadow: none;
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
        border-radius: 0 8px 8px 0;
      }
      
      .dropdown-toggle::after {
        float: right;
        margin-top: 8px;
      }
    }
    </style>
    
    <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Blogify</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <% if (locals.user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/blog/add-new">Add Blog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/profile"><%= locals.user.fullName %></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link logout-btn" href="/user/logout">Logout</a>
                        </li>
                    <% } else{%>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/signup">Create Account</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/signin">Signin</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    
    <% if (locals.error) { %>
        <div class="container mt-4">
            <div class="alert alert-danger" role="alert">
                <%= locals.error %>
            </div>
        </div>
    <% } %>